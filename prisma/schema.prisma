generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}


model User {
  id Int @id @default(1) @unique
  email String @unique
  password String
  created_at DateTime @default(now())
  updated_at DateTime ?
  deleted_at DateTime ?
  experience Experience[]
  project Project[]
}

model Experience {
  id Int @id @default(autoincrement())
  company_name String
  occupation String
  init_date DateTime
  end_date DateTime
  description String
  user_id Int
  user User @relation(fields: [user_id], references: [id])
}

model Project {
  id Int @id @default(autoincrement())
  title String
  description String
  repository_url String
  demo_url String
  user_id Int
  user User @relation(fields: [user_id], references: [id])
}

model Technology {
  id Int @id @default(autoincrement())
  name String
}

model Project_technology {
  id Int @id @default(autoincrement())
}

model Experience_technology {
  id Int @id @default(autoincrement())
}